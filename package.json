  },
  "homepage": "https://mahakalp.dev",
  "bugs": {
    "url": "https://github.com/Mahakalp/Sutra/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
